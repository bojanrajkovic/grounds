{
  "name": "grounds-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "test": "vitest run",
    "test:watch": "vitest",
    "knip": "knip",
    "lint": "oxlint --deny-warnings",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "docs:generate-api": "typedoc",
    "docs:build-validator": "./mdbook/build-validator.sh",
    "docs:build": "pnpm build && pnpm docs:generate-api && pnpm docs:build-validator && mdbook build mdbook",
    "docs:serve": "mdbook serve mdbook",
    "prepare": "husky",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@tsconfig/strictest": "2.0.8",
    "@types/conventional-commits-parser": "5.0.2",
    "@types/node": "24.10.9",
    "@vitest/coverage-v8": "4.0.18",
    "conventional-commits-parser": "6.2.1",
    "husky": "9.1.7",
    "knip": "5.82.1",
    "lint-staged": "16.2.7",
    "oxfmt": "0.26.0",
    "oxlint": "1.41.0",
    "tsx": "4.21.0",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "packageManager": "pnpm@10.28.2"
}
