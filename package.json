{
  "name": "grounds-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint --deny-warnings",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "docs:generate-api": "typedoc",
    "docs:build-validator": "./mdbook/build-validator.sh",
    "docs:build": "pnpm build && pnpm docs:generate-api && pnpm docs:build-validator && mdbook build mdbook",
    "docs:serve": "mdbook serve mdbook",
    "prepare": "husky",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@faker-js/faker": "^10.2.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/conventional-commits-parser": "^5.0.2",
    "@types/node": "^24.0.0",
    "conventional-commits-parser": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.0.0",
    "tsx": "^4.21.0",
    "typedoc": "0.28.16",
    "typescript": "^5.7.2",
    "vitest": "^4.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
